---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const portfolios = await getCollection('portfolio');
---

<MainLayout title="作品集">
  <Breadcrumb 
    links={[
      { href: '/', label: '首页' },
      { href: '#', label: '作品集' }
    ]} 
  />
  
  <h1>作品集</h1>
  
  <div class="portfolio-grid grid-5">
    {portfolios.map(portfolio => (
      <div class="portfolio-card">
        <a href={`/portfolio/${portfolio.slug}`} aria-label={`查看作品集：${portfolio.data.title}`}></a>
        <div class="portfolio-image">
          <img src="/images/noimg.gif" alt="暂无图片" />
        </div>
        <div class="portfolio-content">
          <h2 class="portfolio-title">{portfolio.data.title}</h2>
          <p class="portfolio-date">{portfolio.data.date ? new Date(portfolio.data.date).toLocaleDateString('zh-CN') : '未知日期'}</p>
        </div>
      </div>
    ))}
  </div>
  
  {portfolios.length === 0 && (
    <p style="text-align: center; margin-top: 2rem;">暂无作品集项目</p>
  )}
</MainLayout>

<style>
  /* portfolio页面特定样式可以保留 */
</style>