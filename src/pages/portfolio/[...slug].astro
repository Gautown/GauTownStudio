---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection, getEntry, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const portfolios = await getCollection('portfolio');
  return portfolios.map(portfolio => ({
    params: { slug: portfolio.slug },
    props: { slug: portfolio.slug },
  }));
}

const { slug } = Astro.props;
const portfolio = await getEntry('portfolio', slug) as CollectionEntry<'portfolio'>;
const { Content } = await render(portfolio);
---

<MainLayout title={portfolio.data.title}>
  <Breadcrumb 
    links={[
      { href: '/', label: '首页' },
      { href: '/portfolio', label: '作品集' },
      { href: '#', label: '正文' }
    ]} 
  />
  
  <h1>{portfolio.data.title}</h1>
  
  <div class="portfolio-meta">
    <p>{portfolio.data.date ? new Date(portfolio.data.date).toLocaleDateString('zh-CN') : ''}</p>
  </div>
  
  {portfolio.data.thumbnail && (
    <img src={portfolio.data.thumbnail} alt={portfolio.data.title} class="portfolio-image" />
  )}
  
  <div>
    <Content />
  </div>
</MainLayout>

<style>
  h1 {
    color: #2c3e50;
  }
  
  .portfolio-meta {
    color: #666;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }
  
  .portfolio-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    background-color: #f5f5f5;
    margin-bottom: 2rem;
  }
</style>