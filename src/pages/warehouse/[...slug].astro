---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection, getEntry, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const warehouses = await getCollection('warehouse');
  return warehouses.map(warehouse => ({
    params: { slug: warehouse.slug },
    props: { slug: warehouse.slug },
  }));
}

const { slug } = Astro.props;
const warehouse = await getEntry('warehouse', slug) as CollectionEntry<'warehouse'>;
const { Content } = await render(warehouse);
---

<MainLayout title={warehouse.data.title}>
  <Breadcrumb 
    links={[
      { href: '/', label: '首页' },
      { href: '/warehouse', label: '仓库' },
      { href: '#', label: '正文' }
    ]} 
  />
  
  <h1>{warehouse.data.title}</h1>
  
  <div class="warehouse-meta">
    <p>{warehouse.data.date ? new Date(warehouse.data.date).toLocaleDateString('zh-CN') : ''}</p>
  </div>
  
  {warehouse.data.thumbnail && (
    <img src={warehouse.data.thumbnail} alt={warehouse.data.title} class="warehouse-image" />
  )}
  
  <div>
    <Content />
  </div>
</MainLayout>

<style>
  h1 {
    color: #2c3e50;
  }
  
  .warehouse-meta {
    color: #666;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }
  
  .warehouse-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    background-color: #f5f5f5;
    margin-bottom: 2rem;
  }
</style>