---
import ContentLayout from '../../layouts/ContentLayout.astro';
import { getCollection, getEntry, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const warehouses = await getCollection('warehouse');
  return warehouses.map(warehouse => ({
    params: { slug: warehouse.slug },
    props: { slug: warehouse.slug },
  }));
}

const { slug } = Astro.props;
const warehouse = await getEntry('warehouse', slug) as CollectionEntry<'warehouse'>;
const { Content } = await render(warehouse);

// 获取随机推荐内容（示例数据）
const randomRecommendations = [
  { title: "推荐作品1", url: "/portfolio/recommend1", type: "作品" },
  { title: "推荐工具1", url: "/tools/recommend1", type: "工具" },
  { title: "推荐笔记1", url: "/notes/recommend1", type: "笔记" },
];

// 获取最新文章（示例数据）
const latestArticles = [
  { title: "最新作品1", url: "/portfolio/latest1", date: "2023-06-01" },
  { title: "最新工具1", url: "/tools/latest1", date: "2023-05-28" },
  { title: "最新笔记1", url: "/notes/latest1", date: "2023-05-25" },
];

// 获取热门标签（示例数据）
const popularTags = [
  { name: "前端", count: 15, url: "/tags/frontend" },
  { name: "设计", count: 12, url: "/tags/design" },
  { name: "React", count: 10, url: "/tags/react" },
  { name: "Node.js", count: 8, url: "/tags/nodejs" },
];
---

<ContentLayout 
  title={warehouse.data.title}
  description={warehouse.data.description}
  breadcrumbLinks={[
    { href: '/', label: '首页' },
    { href: '/warehouse', label: '仓库' },
    { href: '#', label: '正文' }
  ]}
  randomRecommendations={randomRecommendations}
  latestArticles={latestArticles}
  popularTags={popularTags}
>
  <article class="warehouse-detail">
    <h1>{warehouse.data.title}</h1>
    
    <div class="warehouse-meta">
      <p>{warehouse.data.date ? new Date(warehouse.data.date).toLocaleDateString('zh-CN') : ''}</p>
    </div>
    
    {warehouse.data.thumbnail && (
      <img src={warehouse.data.thumbnail} alt={warehouse.data.title} class="warehouse-image" />
    )}
    
    <div class="warehouse-content">
      <Content />
    </div>
  </article>
</ContentLayout>

<style>
  .warehouse-detail h1 {
    color: #2c3e50;
    margin-bottom: 1rem;
  }
  
  .warehouse-meta {
    color: #666;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }
  
  .warehouse-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    background-color: #f5f5f5;
    margin-bottom: 2rem;
  }
  
  .warehouse-content {
    line-height: 1.8;
  }
</style>