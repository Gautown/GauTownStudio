---
import MainLayout from '../../layouts/MainLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getCollection } from 'astro:content';

const notes = await getCollection('notes');
---

<MainLayout title="笔记">
  <Breadcrumb 
    links={[
      { href: '/', label: '首页' },
      { href: '#', label: '笔记' }
    ]} 
  />
  
  <h1>笔记</h1>
  
  <ul class="notes-list">
    {notes.map(note => (
      <li class="note-item">
        <a href={`/notes/${note.slug}`} class="note-link">{note.data.title}</a>
      </li>
    ))}
  </ul>
  
  {notes.length === 0 && (
    <p style="text-align: center;">暂无笔记</p>
  )}
</MainLayout>

<style>
  /* notes页面特定样式可以保留 */
</style>