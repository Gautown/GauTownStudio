---
import { getCollection } from 'astro:content';

const portfolios = await getCollection('portfolio');
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>测试作品集</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    h1 {
      color: #2c3e50;
    }
    
    ul {
      list-style-type: none;
      padding: 0;
    }
    
    li {
      margin-bottom: 1rem;
      padding: 1rem;
      border: 1px solid #eee;
      border-radius: 4px;
    }
    
    a {
      color: #3498db;
      text-decoration: none;
    }
    
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>测试作品集</h1>
  
  <h2>作品集项目数量: {portfolios.length}</h2>
  
  <ul>
    {portfolios.map(portfolio => (
      <li>
        <h3>{portfolio.data.title}</h3>
        <p>{portfolio.data.description}</p>
        <a href={`/portfolio/${portfolio.slug}`}>查看详情</a>
      </li>
    ))}
  </ul>
  
  {portfolios.length === 0 && (
    <p>暂无作品集项目</p>
  )}
</body>
</html>