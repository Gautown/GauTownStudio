---
import { getEntry } from 'astro:content';
import Search from './Search.astro';

// 使用正确的集合名称 'site-config'
const siteConfig = await getEntry('site-config', 'site');
const navigation = siteConfig?.data.navigation || [];

// 添加调试信息
console.log('SiteConfig data:', siteConfig?.data);
console.log('Navigation data:', navigation);
---

<header class="site-header">
  <div class="header-container">
    <div class="logo-area">
      <a href="/" class="logo-link">
        {siteConfig?.data.logo && siteConfig.data.logo !== "" ? (
          <>
            <img src={siteConfig.data.logo} alt={siteConfig.data.siteName} class="logo" />
            <h1 class="site-title site-title-hidden">{siteConfig?.data.siteName || '网站名称'}</h1>
          </>
        ) : (
          <>
            <div class="logo-placeholder">{siteConfig?.data.siteName?.charAt(0) || 'G'}</div>
            <h1 class="site-title">{siteConfig?.data.siteName || '网站名称'}</h1>
          </>
        )}
      </a>
    </div>
    
    {/* 移动端菜单切换按钮 */}
    <input type="checkbox" id="menu-toggle" class="menu-toggle" />
    <label for="menu-toggle" class="menu-button">
      <span></span>
      <span></span>
      <span></span>
    </label>
    
    <nav class="main-navigation">
      <ul class="nav-list">
        {/* 添加调试信息 */}
        {navigation.length > 0 ? (
          navigation.map((item: { name: string; url: string }) => (
            <li class="nav-item">
              <a href={item.url} class="nav-link">{item.name}</a>
            </li>
          ))
        ) : (
          <li class="nav-item">
            <span class="nav-link">导航项为空</span>
          </li>
        )}
        <li class="nav-item search-item">
          <Search placeholder="搜索..." />
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
.site-header {
  background-color: #fcfcfc;
  border-bottom: 1px solid #ddd;
  top:0;
  z-index: 100;
  position: -webkit-sticky;
  position: sticky;
}

.header-container {
  max-width: 1440px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.logo-area {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.logo-link {
  display: flex;
  align-items: center;
  gap: 1rem;
  text-decoration: none;
}

.logo {
  height: 53px;
  width: auto;
}

.logo-placeholder {
  width: 40px;
  background-color: #3498db;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
}

.site-title {
  margin: 0;
  font-size: 1.5rem;
  color: #2c3e50;
}

/* 当显示logo时隐藏网站名称 */
.site-title-hidden {
  display: none;
}

/* 隐藏checkbox */
.menu-toggle {
  display: none;
}

/* 菜单按钮样式 */
.menu-button {
  display: none;
  flex-direction: column;
  cursor: pointer;
  padding: 0.5rem;
}

.menu-button span {
  width: 25px;
  height: 3px;
  background-color: #333;
  margin: 3px 0;
  transition: 0.3s;
  border-radius: 2px;
}

/* 导航菜单样式 */
.main-navigation .nav-list {
  display: flex;
  list-style: none;
  gap: 1.5rem;
  align-items: center;
}

.nav-link {
  text-decoration: none;
  color: #333;
  font-weight: 500;
  transition: color 0.2s ease;
  padding: 0.5rem 1rem;
  border-radius: 4px;
}

.nav-link:hover {
  color: #fff;
  background-color: #888;
}

.admin-link {
  background-color: #3498db;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 4px;
}

.admin-link:hover {
  background-color: #2980b9;
  color: white;
}

/* 搜索项样式 */
.search-item {
  display: flex;
  align-items: center;
}

/* 移动端样式 */
@media (max-width: 768px) {
  .header-container {
    flex-direction: row;
    gap: 1rem;
  }
  
  .menu-button {
    display: flex;
  }
  
  .main-navigation {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    z-index: 100;
  }
  
  .main-navigation .nav-list {
    flex-direction: column;
    gap: 0;
  }
  
  .nav-item {
    border-bottom: 1px solid #eee;
  }
  
  .nav-link {
    display: block;
    padding: 1rem 2rem;
    color: #333;
    text-decoration: none;
  }
  
  .nav-link:hover {
    background-color: #f8f9fa;
    color: #3498db;
  }
  
  /* 搜索项移动端样式 */
  .search-item {
    padding: 1rem 2rem;
    border-bottom: 1px solid #eee;
  }
  
  /* 当checkbox被选中时显示菜单 */
  .menu-toggle:checked ~ .main-navigation {
    transform: translateX(0);
  }
  
  /* 菜单按钮动画 */
  .menu-toggle:checked + .menu-button span:nth-child(1) {
    transform: rotate(-45deg) translate(-5px, 6px);
  }
  
  .menu-toggle:checked + .menu-button span:nth-child(2) {
    opacity: 0;
  }
  
  .menu-toggle:checked + .menu-button span:nth-child(3) {
    transform: rotate(45deg) translate(-5px, -6px);
  }
}

/* 平板样式 */
@media (min-width: 769px) and (max-width: 1024px) {
  .main-navigation .nav-list {
    gap: 1rem;
  }
}
</style>