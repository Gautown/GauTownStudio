---
interface Props {
  placeholder?: string;
}

const { placeholder = "搜索..." } = Astro.props;
---

<div class="search-container">
  <form class="search-form" action="/search" method="get">
    <input 
      type="text" 
      name="q" 
      class="search-input" 
      placeholder={placeholder}
      aria-label="搜索网站内容"
    />
    <button type="submit" class="search-button" aria-label="搜索">
      <i class="bi bi-search"></i>
    </button>
  </form>
</div>

<style>
.search-container {
  display: flex;
  align-items: center;
  margin-left: 1rem;
}

.search-form {
  display: flex;
  align-items: center;
  position: relative;
}

.search-input {
  padding: 0.5rem 2.5rem 0.5rem 1rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 0.9rem;
  width: 200px;
  transition: all 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: #3498db;
  box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
  width: 250px;
}

.search-button {
  position: absolute;
  right: 0;
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: #7f8c8d;
  font-size: 1rem;
}

.search-button:hover {
  color: #3498db;
}

/* 移动端适配 */
@media (max-width: 768px) {
  .search-container {
    margin: 1rem 0;
    width: 100%;
  }
  
  .search-input {
    width: 100%;
  }
  
  .search-input:focus {
    width: 100%;
  }
}
</style>